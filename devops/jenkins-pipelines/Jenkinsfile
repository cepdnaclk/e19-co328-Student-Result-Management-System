pipeline {
    agent any

    environment {
        JAVA_HOME = "/usr/lib/jvm/java-1.21.0-openjdk-amd64"
    }

    stages {
        stage('Checkout') {
            steps {
                // Fetch code from GitHub repository
                git 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project using a Docker container
                dir('academetrics') {
                    sh 'docker run --rm -v $PWD:/workspace -v $HOME/.m2:/root/.m2 -w /workspace maven:3.8.5-openjdk-21-slim mvn clean install -DskipTests'
                }
            }
        }

        stage('Deploy') {
            steps {
                // Run Docker Compose to build and start the services
                sh 'sudo docker-compose up --build -d'
            }
        }
    }

    post {
        always {
            // Clean up Docker Compose
            // sh 'sudo docker-compose down'
        }
    }
}
